<div class="profile-container bg-light">

  <div class="row">
    <div
      class="col-sm-5 p-0 d-flex flex-column align-items-center justify-content-center"
    >
      <img src="{{imageFile}}" class="profile-image" />
      <h4 class="my-3 text-center">{{displayName}}</h4>


    </div>

    <div class="col-sm-7 p-0">
      <h6 class="mt-2 mb-5 text-center">{{aboutMe}}</h6>
      <h5 class="mt-3 px-1">My Links</h5>
      <div class="row justify-content-around align-items-center mb-5">
        {{#each links}}
          {{#eq this.is_action 0}}
            <div class="col-md-6 p-0 d-flex justify-content-center">
              <a
                href="http://{{this.link}}"
                target="_blank"
                class="a-div d-flex mx-3 my-2"
              >
                <button
                  class="btn btn-heavy btn-sm flex-grow-1 {{#eq ../backgroundColor '#1e91cf'}}btn-blue-theme{{/eq}}{{#eq ../backgroundColor '#1e1e1e'}}btn-dark-theme{{/eq}}"
                  {{!-- class="btn btn-theme btn-primary btn-sm flex-grow-1" --}}
                >
                  {{this.label}}
                </button>
              </a>
            </div>
          {{/eq}}

          {{#eq this.is_action 1}}
            <div class="col-md-6 p-0 d-flex justify-content-center">
              <a
                href="https://{{this.link}}"
                target="_blank"
                class="a-div d-flex mx-3 my-2"
              >
                <button
                  class="btn btn-heavy btn-sm flex-grow-1 {{#eq ../backgroundColor '#1e91cf'}}btn-blue-theme{{/eq}}{{#eq ../backgroundColor '#1e1e1e'}}btn-dark-theme{{/eq}}"
                  {{!-- class="btn btn-theme btn-primary btn-sm flex-grow-1" --}}
                >
                  {{this.label}}
                </button>
              </a>
            </div>
          {{/eq}}

        {{/each}}
      </div>

    </div>

  </div>
</div>